# OpenRouter API Key for AI features
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Database Configuration
# For local development (PostgreSQL)
DATABASE_URL=postgresql://wardrobe_user:wardrobe_password@localhost:5432/wardrobe_builder

# For Docker (automatically configured)
# DATABASE_URL=postgresql://wardrobe_user:wardrobe_password@db:5432/wardrobe_builder

# For Vercel/Production (Neon.tech)
# DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb

# API URL for frontend (used by Vite)
# Local development:
# VITE_API_URL=http://localhost:3001
# Docker development:
# VITE_API_URL=http://localhost:3002
# Production (Vercel) - uses relative path:
# VITE_API_URL=/api

# Server Port
PORT=3001

# Node Environment
NODE_ENV=development
